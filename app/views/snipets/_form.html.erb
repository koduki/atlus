<%= form_for(@snipet) do |f| %>
  <% if @snipet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@snipet.errors.count, "error") %> prohibited this snipet from being saved:</h2>

      <ul>
      <% @snipet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :query %><br />
    <%= f.text_area :query %>
    <div id="query"></div>
  </div>
  <div class="field">
    <label for="snipet_charTtype">Chart Type</label><br />
    <%= f.select :chartType, [["Horizon Bar Chart", "horizonBar"], ["PI Chart", "pi"], ["Line Chart", "line"]] %>
  </div>
  <div class="field">
    <%= f.label :isTableVisible %><br />
    <%= f.check_box :isTableVisible %>
  </div>
  <div class="field">
    <%= f.label :isChartVisible %><br />
    <%= f.check_box :isChartVisible %>
  </div>
  <div class="field">
    <%= f.label :width %><br />
    <%= f.text_field :width %>
  </div>
  <div class="field">
    <%= f.label :height %><br />
    <%= f.text_field :height %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
